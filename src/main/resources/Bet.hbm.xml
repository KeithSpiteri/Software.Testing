<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
 
 <hibernate-mapping>
 	<class name="persistant.Bet" table="bet">
		<meta attribute="class-description">
			This class contains bet details
		</meta>
		<id name="id" column="betId" type="int">
			<generator class="native"/>
		</id>
		
		 <property name="riskLevel" column="risk_level" type="string"/>
		 <property name="amount" column="amount" type="float"/>
		 <property name="userName" column="user_id" type="string"></property>
		 
	</class>
 </hibernate-mapping>